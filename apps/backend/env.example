# ============================================
# Backend Environment Variables
# ============================================
# Copy this file to .env and fill in your actual values

# ============================================
# Application
# ============================================
NODE_ENV=development
PORT=3001

# ============================================
# Database (PostgreSQL)
# ============================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ai_receptionist?schema=public
DIRECT_URL=postgresql://postgres:postgres@localhost:5432/ai_receptionist?schema=public

# ============================================
# Redis
# ============================================
REDIS_URL=redis://localhost:6379

# ============================================
# Authentication
# ============================================
CLERK_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ============================================
# Vapi.ai
# ============================================
VAPI_API_KEY=your-vapi-api-key-here
VAPI_API_URL=https://api.vapi.ai

# ============================================
# OpenAI
# ============================================
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ============================================
# Twilio (SMS/WhatsApp)
# ============================================
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your-twilio-auth-token-here
TWILIO_PHONE_NUMBER=+1234567890

# ============================================
# AWS S3
# ============================================
AWS_ACCESS_KEY_ID=AKIAxxxxxxxxxxxxxxxxxx
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key-here
AWS_REGION=us-east-1
AWS_S3_BUCKET_NAME=ai-receptionist-recordings

# ============================================
# Logging
# ============================================
LOG_LEVEL=info
